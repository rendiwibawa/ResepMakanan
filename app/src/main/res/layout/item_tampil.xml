<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="horizontal"
    android:layout_marginTop="20dp">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/header_hias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:id="@+id/img_item_photo"
                    android:src="@android:color/darker_gray"
                    android:cropToPadding="true"
                    android:layout_width="150dp"
                    android:layout_height="150dp">

                </de.hdodenhof.circleimageview.CircleImageView>

        </LinearLayout>
        <LinearLayout
            android:padding="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_name"
                android:textColor="#FFBE00"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="@string/nama_makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/tv_item_detail"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/detail_resep"
                android:maxLines="3"
                android:textSize="12dp"
                android:textStyle="normal" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:id="@+id/tv_item_pembaca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#545454"
                        android:text="Pembaca"
                        android:textAllCaps="false"
                        android:textColor="#8DC949" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_item_folo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="#545454"
                        android:text="Baca yuks"
                        android:textAllCaps="false"
                        android:textColor="#8DC949" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>



